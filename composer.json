{
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "bossa/phpspec2-expect": "~1.0",
        "behat/behat": "~3.0",
        "behat/mink-extension": "2.*",
        "behat/mink-goutte-driver": "1.1.*",
        "behat/mink-selenium2-driver": "1.*",
        "sensiolabs/behat-page-object-extension": "2.0.*@dev",
        "magetest/magento-phpspec-extension": "~3.0",
        "magetest/magento-behat-extension": "dev-feature/Behat3",
        "squizlabs/php_codesniffer": "1.*",
        "phpmd/phpmd": "2.*",
        "sebastian/phpcpd": "2.*",
        "pdepend/pdepend": "2.*",
        "phploc/phploc": "2.*",
        "theseer/phpdox": "0.7.*",
        "theseer/fxsl": "1.0.*@dev",
        "phpunit/phpunit": "3.7.*",
        "covex-nn/phpcb": "1.*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "MageTest\\PhpSpec\\MagentoExtension": "src",
            "": [
                "public/app/code/local",
                "public/app/code/community",
                "public/app/code/core",
                "public/app",
                "public/lib"
            ],
            "Mage" : "public/app/code/core"
        }
    }
}
