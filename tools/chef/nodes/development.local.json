{
  "run_list": [
    "role[packer]",
    "recipe[php]",
    "role[web-nginx]",
    "role[db]",
    "role[web-magento]",
    "recipe[config-driven-helper::packages]"
  ],
  "nginx": {
    "sites": {
      "{{hostname}}": {
        "docroot": "/vagrant/public"
      }
    }
  },
  "mysql": {
    "users": {
      "magento": {
        "password": "magento",
        "database_name": "magentodb"
      }
    }
  },
  "magento": {
    "db": {
      "username": "magento",
      "password": "magento",
      "database": "magentodb"
    },
    "dir": "/vagrant/public",

    "## Needed?": "",

    "server": {
      "servername": "{{hostname}}"
    },
    "sites": [
      {
        "servername": "{{hostname}}",
        "run_code": "default"
      }
    ]
  }
}
