{
  "name": "development",
  "description": "",
  "json_class": "Chef::Environment",
  "chef_type": "environment",

  "default_attributes": {
    "nginx": {
      "sites": {
        "{{name}}": {
          "server_name": "{{hostname}}",
          "docroot": "/vagrant/public",
          "protocols": ["http", "https"],
          "restricted_dirs":  [
            "/app/",
            "/includes/",
            "/lib/",
            "/media/downloadable/",
            "/pkginfo/",
            "/report/config.xml",
            "/var/"
          ]
        }
      }
    },

    "mysql": {
      "users": {
        "magento": {
          "database_name": "magentodb"
        }
      },
      "allow_remote_root": true
    },

    "magento": {
      "db": {
        "username": "magento",
        "database": "magentodb"
      },
      "dir": "/vagrant/public"
    },

    "packages": [ "git" ],

    "iptables-standard": {
      "allowed_incoming_ports": {"mysql": "mysql"}
    }
  },

  "override_attributes": {
    "data-bag-merge": {
      "environments": {
        "encrypted": false
      }
    }
  }
}
